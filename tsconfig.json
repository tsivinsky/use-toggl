{
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "ES2018",
    "sourceMap": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "noEmit": true,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "."
  }
}
